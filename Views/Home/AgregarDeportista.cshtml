@{
    ViewBag.Title = "Agregar Deportista";
}

<div class ="form">
<h1 class="text-center my-4">Agregar Deportista</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="GuardarDeportista" method="post">
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="Nombre" placeholder="Nombre" required />
                </div>
                
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="Apellido" placeholder="Apellido" required />
                </div>
                
                <div class="form-group mb-3">
                    <input type="date" class="form-control" name="FechaNacimiento" required />
                </div>
                
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="Foto" placeholder="URL de la Foto" required />
                </div>
                
                <div class="form-group mb-3">
                    <select class="form-select" name="IdDeporte" required>
                        <option value="">Selecciona un Deporte</option>
                        @if (ViewBag.Deportes != null)
                        {
                            foreach (Deporte deporte in ViewBag.Deportes)
                            {
                                <option value="@deporte.IdDeporte">@deporte.Nombre</option>
                            }
                        }
                    </select>
                </div>
                
                <div class="form-group mb-3">
                    <select class="form-select" name="IdPais" required>
                        <option value="">Selecciona un Pa√≠s</option>
                        @if (ViewBag.Paises != null)
                        {
                            foreach (Pais pais in ViewBag.Paises)
                            {
                                <option value="@pais.IdPais">@pais.Nombre</option>
                            }
                        }
                    </select>
                </div>
                
                <button type="submit" class="btn btn-primary w-100">Guardar Deportista</button>
            </form>
        </div>
    </div>
</div>
</div>