<div class="container mt-5 deportes-container" style="margin-top: 120px;">
    <div class="row">
        @foreach (Pais pais in ViewBag.Paises)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 deporte-card">
                    <img src="@pais.Bandera" alt="@pais.Nombre" />
                    <div>
                        <h5>@pais.Nombre</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
